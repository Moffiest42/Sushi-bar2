@model IEnumerable<Character>

@{
    ViewData["Title"] = "Персонажи";
}

<h1>Блюда</h1>

<p>
    <a asp-action="Create">Добавить блюдо</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Количество</th> <!-- Level_Number -->
            <th>Описание</th> <!-- Gamer.Name -->
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Weapon</td>
                <td>@item.Level?.Level_Number</td>
                <td>@item.Gamer?.Name</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">✏️</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">🔍</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>